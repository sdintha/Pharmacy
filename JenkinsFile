pipeline {
    agent any
    tools {
    maven 'default'
    jdk 'JDK'
  }
    stages {
        stage('Build Application') {
            steps {
                sh 'mvn clean package'
            }
            post {
                success {
                    echo "Now Archiving the Artifacts...."
                    archiveArtifacts artifacts: '**/*.war'
                }
            }
        }
       stage('Create tomcat docker image'){
      steps{
      sh 'pwd'
      sh 'ls -a'
      sh 'sudo docker build . -t pharmacyapp:1.0'
      }
      }
    }
    
}



